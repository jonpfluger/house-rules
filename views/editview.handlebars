<div class="pt-4" id="categoryId" data-categoryid="{{review.category.id}}">
    <div id="editPost" class="card my-3">
        <div id="editHeader" class="card-header d-flex justify-content-between align-items-center">
            <h2>Edit Post</h2>
        </div>
        <div id="editBody" class="card-body text-center bg-primary bg-opacity-75 w-100 m-auto px-2 py-auto">
            <form id="editPost" class="form post-form" data-reviewid="{{review.id}}">
                <div class="form-group mb-3 mx-2 text-start text-light">
                    <label for="reviewTitle" class="form-label">Review Title</label>
                    <input class="form-control" type="text" id="reviewTitle" name="reviewTitle" value="{{review.title}}"/>
                </div>
                <div class="form-group mb-3 mx-2 text-start text-light">
                    <label for="gameTitle" class="form-label">Game Title</label>
                    <input class="form-control" type="text" id="gameTitle" name="gameTitle" value="{{review.gameTitle}}"/>
                </div>
                <div class="form-group mb-3 mx-2 text-start text-light">
                    <label for="body" class="form-label">Content</label>
                    <textarea id="body" type="text" class="form-control" name="body">{{review.body}}</textarea>
                </div>
                <div id="categoryImageDiv" class="d-flex justify-content-between flex-wrap">
                    <div class="form-group mb-3 ms-2 mx-sm-5 text-start text-light">
                        <label for="category" class="form-label">Categories</label>
                        <br>
                        <select class="custom-select mr-sm-2" id="category" name="category">
                            <option selected disabled>Choose Category...</option>
                            <option value="1">Board Game</option>
                            <option value="2">Card Game</option>
                            <option value="3">Video Game</option>
                        </select>
                    </div>
                    <div class="form-group mb-3 ms-2 me-5 ps-sm-5 text-start">
                        <label for="upload_widget" class="form-label">Image</label>
                        <br>
                        <button type="button" id="upload_widget" class="cloudinary_button" data-imgurl="{{review.img}}">Upload image</button>
                    </div>
                </div>
                <div class="col-12 my-1 text-center">
                <button type="submit" class="btn btn-primary col-sm-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="/js/cloud.js"></script>
<script src="/js/edit.js"></script>